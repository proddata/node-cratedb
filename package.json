{
  "name": "@proddata/node-cratedb",
  "version": "0.0.7",
  "description": "Node.js client for CrateDB",
  "main": "dist/CrateDBClient.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "check-format": "prettier --check 'src/**/*.{ts,tsx,js,jsx}'",
    "lint": "eslint 'src/**/*.{ts,tsx}' 'tests/**/*.{ts,tsx}'",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "ci": "npm run check-format && npm run lint && npm test && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/proddata/node-cratedb.git"
  },
  "keywords": [
    "cratedb",
    "crate",
    "database",
    "nodejs",
    "sql",
    "client"
  ],
  "author": "Georg Traar",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.4",
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.15.0",
    "testcontainers": "^10.14.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^2.1.5"
  },
  "engines": {
    "node": ">=21.0.0"
  }
}